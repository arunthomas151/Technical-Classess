@model Student.Models.Stud

@{
    ViewBag.Title = "Student & Department";
}

<h2>Student & Department</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.DeptId, "DeptId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DeptId", String.Empty)
                @Html.ValidationMessageFor(model => model.DeptId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RegistrationId, "RegistrationId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RegistrationId", String.Empty)
                @Html.ValidationMessageFor(model => model.RegistrationId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
